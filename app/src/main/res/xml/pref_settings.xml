<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="通用">
        <ListPreference
            android:defaultValue="red"
            android:entries="@array/theme_items"
            android:entryValues="@array/theme_items_values"
            android:key="theme_items"
            android:summary="@string/set_theme_sum"
            android:title="主题" />
        <ListPreference
            android:defaultValue="list"
            android:entries="@array/list_ui"
            android:entryValues="@array/list_ui_values"
            android:key="list_ui"
            android:summary="设置便签的布局方式"
            android:title="布局样式" />
    </PreferenceCategory>
    <PreferenceCategory android:title="阅读">

        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="true"
            android:entries="@array/read_bg"
            android:entryValues="@array/read_bg_values"
            android:key="read_bg"
            android:summary="设置阅读界面的背景颜色"
            android:title="阅读背景" />
        <ListPreference
            android:defaultValue="20"
            android:entries="@array/read_text_size"
            android:entryValues="@array/read_text_size_values"
            android:key="read_textsize"
            android:summary="调整阅读界面的字体大小"
            android:title="字体大小" />
        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="#000000"
            android:entries="@array/read_text_color"
            android:entryValues="@array/read_text_color_values"
            android:key="read_textcolor"
            android:summary="设置阅读界面的字体颜色"
            android:title="字体颜色" />
    </PreferenceCategory>
    <PreferenceCategory android:title="开源">
        <Preference
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="code"
            android:summary="https://github.com/YARSICT/NOTEBOOK"
            android:title="项目代码" />

        <Preference
            android:id="@+id/permit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="permit"
            android:summary="Apache License  Version 2.0"
            android:title="开源许可" />
    </PreferenceCategory>
    <PreferenceCategory android:title="关于">

        <Preference
            android:id="@+id/web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="web"
            android:summary="https://aueui.yarsict.top"
            android:title="官方网站" />
    </PreferenceCategory>
</PreferenceScreen>